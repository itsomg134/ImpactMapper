# =============================================================================
# AI LEGAL DOCUMENT SIMPLIFICATION PLATFORM - ENVIRONMENT VARIABLES
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=3000
APP_NAME="AI Legal Simplifier"
APP_VERSION=1.0.0
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000
API_BASE_URL=/api/v1

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# PostgreSQL Database
DATABASE_URL=postgresql://username:password@localhost:5432/legal_ai_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=legal_ai_db
DB_USER=username
DB_PASSWORD=password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Cache & Sessions
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600

# -----------------------------------------------------------------------------
# AI/ML SERVICE PROVIDERS
# -----------------------------------------------------------------------------
# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.3

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4000

# Google Gemini Configuration
GOOGLE_AI_API_KEY=your-google-ai-api-key-here
GOOGLE_AI_MODEL=gemini-pro

# Azure OpenAI (Alternative)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4-deployment

# Hugging Face (for custom models)
HUGGING_FACE_API_KEY=hf_your-hugging-face-token
HUGGING_FACE_MODEL=microsoft/DialoGPT-large

# -----------------------------------------------------------------------------
# DOCUMENT PROCESSING SERVICES
# -----------------------------------------------------------------------------
# AWS Services for Document Processing
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=legal-docs-bucket
AWS_TEXTRACT_REGION=us-east-1

# Google Cloud Document AI
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_PRIVATE_KEY_ID=your-private-key-id
GOOGLE_CLOUD_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----\n"
GOOGLE_CLOUD_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_CLOUD_CLIENT_ID=your-client-id

# Microsoft Azure Form Recognizer
AZURE_FORM_RECOGNIZER_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_FORM_RECOGNIZER_KEY=your-form-recognizer-key

# -----------------------------------------------------------------------------
# FILE STORAGE & CDN
# -----------------------------------------------------------------------------
# Local File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,docx,txt,rtf

# AWS S3 Storage
S3_BUCKET_NAME=legal-ai-documents
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-s3-access-key
S3_SECRET_ACCESS_KEY=your-s3-secret-key

# Cloudinary (Image/Document CDN)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# -----------------------------------------------------------------------------
# AUTHENTICATION & SECURITY
# -----------------------------------------------------------------------------
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-key
JWT_REFRESH_EXPIRE=30d

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_COOKIE_MAX_AGE=86400000
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-oauth-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

MICROSOFT_CLIENT_ID=your-microsoft-oauth-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-oauth-client-secret

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# Password Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# -----------------------------------------------------------------------------
# EMAIL & NOTIFICATIONS
# -----------------------------------------------------------------------------
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SendGrid
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Mailgun
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain.com

# Email Templates
FROM_EMAIL=noreply@yourlegalai.com
FROM_NAME="Legal AI Simplifier"
SUPPORT_EMAIL=support@yourlegalai.com

# -----------------------------------------------------------------------------
# PAYMENT PROCESSING
# -----------------------------------------------------------------------------
# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
STRIPE_PRICE_ID_BASIC=price_basic_plan_id
STRIPE_PRICE_ID_PREMIUM=price_premium_plan_id

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# -----------------------------------------------------------------------------
# MONITORING & ANALYTICS
# -----------------------------------------------------------------------------
# Application Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# Analytics
GOOGLE_ANALYTICS_ID=GA4-your-measurement-id
MIXPANEL_TOKEN=your-mixpanel-token

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Health Checks
HEALTH_CHECK_INTERVAL=30000
DATABASE_HEALTH_CHECK=true
REDIS_HEALTH_CHECK=true
AI_SERVICE_HEALTH_CHECK=true

# -----------------------------------------------------------------------------
# LEGAL & COMPLIANCE
# -----------------------------------------------------------------------------
# Terms of Service & Privacy Policy URLs
TERMS_OF_SERVICE_URL=https://yourlegalai.com/terms
PRIVACY_POLICY_URL=https://yourlegalai.com/privacy
COOKIE_POLICY_URL=https://yourlegalai.com/cookies

# Data Retention Policies
USER_DATA_RETENTION_DAYS=2555
DOCUMENT_RETENTION_DAYS=90
LOGS_RETENTION_DAYS=30

# GDPR Compliance
GDPR_COMPLIANCE_MODE=true
DATA_PROCESSING_CONSENT_REQUIRED=true
COOKIE_CONSENT_REQUIRED=true

# -----------------------------------------------------------------------------
# THIRD-PARTY INTEGRATIONS
# -----------------------------------------------------------------------------
# Legal Database APIs
WESTLAW_API_KEY=your-westlaw-api-key
LEXISNEXIS_API_KEY=your-lexisnexis-api-key

# Document Signing
DOCUSIGN_INTEGRATION_KEY=your-docusign-integration-key
DOCUSIGN_CLIENT_SECRET=your-docusign-client-secret
DOCUSIGN_USER_ID=your-docusign-user-id
DOCUSIGN_ACCOUNT_ID=your-docusign-account-id

# Legal Forms APIs
USLEGAL_API_KEY=your-uslegal-api-key
NOLO_API_KEY=your-nolo-api-key

# -----------------------------------------------------------------------------
# DEVELOPMENT & TESTING
# -----------------------------------------------------------------------------
# Testing Database
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/legal_ai_test_db

# Development Tools
WEBPACK_DEV_SERVER_PORT=3001
HOT_RELOAD=true
SOURCE_MAPS=true

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_TITLE="Legal AI Simplifier API"
SWAGGER_DESCRIPTION="API for AI-powered legal document simplification"
SWAGGER_VERSION=1.0.0

# Feature Flags
ENABLE_ADVANCED_AI=true
ENABLE_BULK_PROCESSING=false
ENABLE_OCR_PROCESSING=true
ENABLE_MULTI_LANGUAGE=false
ENABLE_COLLABORATION=false
ENABLE_API_ACCESS=true

# -----------------------------------------------------------------------------
# PERFORMANCE & SCALING
# -----------------------------------------------------------------------------
# Caching Strategy
CACHE_STRATEGY=redis
CACHE_PREFIX=legal_ai:
DOCUMENT_CACHE_TTL=3600
AI_RESPONSE_CACHE_TTL=1800

# Queue Management (Bull/Redis)
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=5
QUEUE_MAX_ATTEMPTS=3

# Load Balancing
CLUSTER_MODE=false
CLUSTER_WORKERS=auto

# CDN Configuration
CDN_URL=https://cdn.yourlegalai.com
STATIC_FILES_CDN=true

# -----------------------------------------------------------------------------
# LOCALIZATION
# -----------------------------------------------------------------------------
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,it
TRANSLATION_SERVICE=google
GOOGLE_TRANSLATE_API_KEY=your-google-translate-key

# -----------------------------------------------------------------------------
# BACKUP & DISASTER RECOVERY
# -----------------------------------------------------------------------------
# Database Backups
DB_BACKUP_ENABLED=true
DB_BACKUP_SCHEDULE="0 2 * * *"
DB_BACKUP_RETENTION_DAYS=30
DB_BACKUP_S3_BUCKET=legal-ai-backups

# File Backups
FILE_BACKUP_ENABLED=true
FILE_BACKUP_S3_BUCKET=legal-ai-file-backups

# -----------------------------------------------------------------------------
# ADVANCED AI CONFIGURATION
# -----------------------------------------------------------------------------
# Model Fine-tuning
CUSTOM_MODEL_ENDPOINT=https://your-custom-model-api.com
CUSTOM_MODEL_API_KEY=your-custom-model-key

# AI Safety & Content Filtering
CONTENT_FILTER_ENABLED=true
PROFANITY_FILTER_ENABLED=true
BIAS_DETECTION_ENABLED=true

# AI Model Fallback Strategy
PRIMARY_AI_PROVIDER=openai
SECONDARY_AI_PROVIDER=anthropic
FALLBACK_AI_PROVIDER=google

# Simplification Settings
DEFAULT_READING_LEVEL=8
SIMPLIFICATION_MODES=basic,intermediate,advanced
PRESERVE_LEGAL_TERMS=true
INCLUDE_DEFINITIONS=true
GENERATE_SUMMARIES=true